{
    // Workbench
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Cobalt2",
    "workbench.fontAliasing": "antialiased",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.sideBar.location": "right",
    "workbench.settings.editor": "json",
    "workbench.layoutControl.enabled": false,

    // Icon theme & config
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.theme": "specific",
    "material-icon-theme.activeIconPack": "react_redux",

    // Brackets colorizer
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,

    // Theme override (Cobalt 2)
    "workbench.colorCustomizations": {
      "activityBar.activeBorder": "#ffc600",
      "activityBar.activeBackground": "#ffc60020"
    },

    // Breadcrumbs
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",

    // Editor
    "editor.emptySelectionClipboard": false,
    "editor.folding": false,
    "editor.formatOnPaste": false,
    "editor.fontLigatures": true,
    "editor.fontFamily": "FiraCode-Retina",
    "editor.fontWeight": "400",
    "editor.lineHeight": 0,
    "editor.fontSize": 18,
    "editor.letterSpacing": 0.2,
    "editor.matchBrackets": "always",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.quickSuggestionsDelay": 0,
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "all",
    "editor.rulers": [80, 100, 120],
    "editor.snippetSuggestions": "top",
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.smoothScrolling": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.linkedEditing": true,

    // Editor MiniMap
    "editor.minimap.enabled": false,
    "editor.minimap.showSlider": "always",

    // Disable “Peek” Previews
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",

    // Window
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",

    // Trim stuff on save
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // Sidebar
    "explorer.autoReveal": false,
    "explorer.openEditors.visible": 1,
    "explorer.compactFolders": false,

    // Terminal Settings
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    "terminal.integrated.fontSize": 14, // 14

    // Some privacy ...
    "telemetry.telemetryLevel": "off",

    // Exclude from search
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      // Hide everything in /public, except "index.php"
      "**/public/[abcdefghjklmnopqrstuvwxyz]*": true,
      "**/public/i[abcdefghijklmopqrstuvwxyz]*": true,
      // Hide everything in /vendor, except "laravel" folder.
      "**/vendor/[abcdefghijkmnopqrstuvwxyz]*": true,
      "**/vendor/l[bcdefghijklmnopqrstuvwxyz]*": true,
      "storage/framework/views": true
    },

    "git.suggestSmartCommit": false,

    // disable debug button on package.json
    "debug.javascript.codelens.npmScripts": "never",

    "workbench.list.smoothScrolling": true,

    "editor.inlineSuggest.enabled": true,
    "search.searchOnType": false,
    "editor.accessibilitySupport": "off",
    "diffEditor.ignoreTrimWhitespace": false,

    // SETUP DEFAULT FORMATTERS
    "[javascriptreact]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
      "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[css]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
      "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[astro]": {
      "editor.defaultFormatter": "astro-build.astro-vscode"
    },

    // DEFAULT PRETTIER CONFIG
    "prettier.semi": true,
    "prettier.tabWidth": 2,
    "prettier.printWidth": 100,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    "prettier.jsxSingleQuote": false,
    "prettier.bracketSameLine": false,
    "prettier.quoteProps": "consistent",

    // ESLINT CONFIG
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },

    // ERROR LENS EXTENSION
    "errorLens.enabled": true,
    "errorLens.statusBarIconsEnabled": false,
    "errorLens.gutterIconsEnabled": true,
    "errorLens.enabledDiagnosticLevels": ["warning", "info", "error"],

    // JAVASCRIPT / TYPESCRIPT CONFIG
    "js/ts.implicitProjectConfig.checkJs": true,

    // COPILOT SETTINGS
    "github.copilot.enable": {
      "*": true,
      "yaml": true,
      "plaintext": true,
      "markdown": true,
      "javascript": true,
      "dotenv": false
    },

    // COPILOT CHAT SETTINGS
    "chat.experimental.quickQuestion.enable": true,

    // TypeScript settings
    "typescript.updateImportsOnFileMove.enabled": "never",

    // htmltagwrap settings
    "htmltagwrap.tag": "div",

    // SVELTE CONFIG
    "svelte.enable-ts-plugin": true,
    "svelte.plugin.svelte.note-new-transformation": false,

    // Extensions config
    "extensions.autoUpdate": "onlyEnabledExtensions",

  }
